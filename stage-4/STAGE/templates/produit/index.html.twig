
{% extends 'backtemplate.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}

<div class="jumbotron">
{{ form_start(form) }}
    <div class="form-row">
        <div>
            {{ form_row(form.maxPrice) }}
        </div>

        <div >
            {{ form_row(form.minQuantite) }}

        </div>
        <div class="col">
            <button class="btn btn-primary">Rechercher</button>

        </div>


    </div>
{{ form_end(form) }}

</div>




    <h1><font color="mediumpurple">Voir tous nos Produits</font></h1>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Quantite</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>

                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.quantite }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create new</a>
    {{ knp_pagination_render(produits) }}
{% endblock %}